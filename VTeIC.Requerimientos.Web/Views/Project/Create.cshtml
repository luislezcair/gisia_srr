@model VTeIC.Requerimientos.Web.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Crear nuevo proyecto";
}

<div class="page-header">
    <h2>Crear proyecto</h2>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserId)

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LanguageId, "Idioma de búsqueda", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.LanguageId, Model.Langauges, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LanguageId)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-3 col-md-3 clearfix">
                <div class="pull-right">
                    <a href="@Url.Action("Index")" class="btn btn-default">Cancelar</a>
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
