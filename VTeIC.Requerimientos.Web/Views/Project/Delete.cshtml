@model VTeIC.Requerimientos.Entidades.Project

@{
    ViewBag.Title = "Borrado";
}

<div class="page-header">
    <h2>Borrar proyecto</h2>
    <p class="small-text">@Model.Nombre</p>
</div>

<h3>¿Está seguro que desea borrar este proyecto?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>

    <div class="alert alert-danger">
        <p><strong>¡Atención!</strong> Se borrarán todos los archivos que hayan sido descargados. Esta acción no se puede deshacer.</p>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-danger" />
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-info" })
        </div>
    }
</div>
