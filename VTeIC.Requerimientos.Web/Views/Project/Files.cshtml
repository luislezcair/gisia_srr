@using VTeIC.Requerimientos.Web.ViewModels
@model ProjectViewModel

@{
    ViewBag.Title = "Archivos";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
    <li>@Html.ActionLink("Proyectos", "Index", "Project")</li>
    <li class="active">@Model.Nombre</li>
    <li class="active">Archivos</li>
</ol>

<div class="page-header">
    <h2>Archivos del proyecto</h2>
</div>

@if (Model.Files.Any())
{
    <table class="table no-border-top table-hover table-striped">
        <thead>
            <tr>
                <th style="width: 3%"></th>
                <th>Origen</th>
                <th>Nombre de archivo</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0; }
            @foreach (FileViewModel file in Model.Files)
            {
                <tr>
                    <td>@(++i)</td>
                    <td><a href="@file.SourceURL" target="_blank">@(file.SourceURL.Truncate(70))</a></td>
                    <td><a target="_blank" href="@file.VirtualPath">@file.FileName</a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="list-count">Se encontraron @Model.Files.Count archivos</td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div class="alert alert-info">
        Este proyecto aún no tiene archivos.
    </div>
}

