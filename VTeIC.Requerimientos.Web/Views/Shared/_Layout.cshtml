<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="Text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/estilos")
    @*@Scripts.Render("~/bundles/modernizr")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SRR", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("VTeIC", "Index", "VTeIC")</li>*@
                    <li>@Html.ActionLink("Proyectos", "Index", "Project")</li>
                    @*<li>@Html.ActionLink("Preguntas", "Index", "Questions")</li>*@
                    @*<li>@Html.ActionLink("Opciones", "Index", "QuestionChoice")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="margin-top: 150px">
            <p>&copy; @DateTime.Now.Year - Vigilancia Tecnológica e Inteligencia Competitiva</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
